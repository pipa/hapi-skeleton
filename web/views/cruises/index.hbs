<div class="vw-crz">
    <header class="gen-header">
        <div class="img-box">
            <img src="{{ assetsPath }}/img/cruises/intro.bg-cruise.jpg" class="img-responsive" alt="">
            <div class="title">
                <small>EXCURSIONS</small>
                <big>CRUISE PASSANGERS</big>
            </div>
        </div>
        <div class="container pr">
            {{> global/chat-btn }}
        </div>
